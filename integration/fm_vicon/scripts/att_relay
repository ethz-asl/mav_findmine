import rospy
import numpy as np

import tf2_ros
import geometry_msgs.msg
import piksi_rtk_msgs.msg

if __name__ == '__main__':
    rospy.init_node('tf2_att_relay')

    tf_buffer = tf2_ros.Buffer()
    listener = tf2_ros.TransformListener(tf_buffer)
    pos_cov_pub = rospy.Publisher('/moa/piksi/attitude_receiver_0/ros/baseline_ned', piksi_rtk_msgs.msg.PositionWithCovarianceStamped, queue_size=1)
    pos_pub = rospy.Publisher('/moa/piksi/attitude_receiver_0/ros/pos_enu', geometry_msgs.msg.PointStamped, queue_size=1)
    rate = 5
    poll_rate = rospy.Rate(10)
    delay = rospy.get_param('~vicon_delay_s', 0.0)
    vicon_delay_s = rospy.Duration(delay)
    rospy.loginfo("Configured Vicon delay: %.6f s", (delay))
    startup_sec = 4
    stamp = rospy.Time().now()
    stamp.secs = stamp.secs + startup_sec
    stamp.nsecs = 0

    while not rospy.is_shutdown():
        if (rospy.Time().now() > stamp):
            frame_id = 'vicon'

            T_IA = geometry_msgs.msg.TransformStamped()
            try:
                T_IA = tf_buffer.lookup_transform(frame_id, 'att', stamp - vicon_delay_s)
            except (tf2_ros.LookupException, tf2_ros.ConnectivityException, tf2_ros.ExtrapolationException):
                poll_rate.sleep()
                continue

            T_IP = geometry_msgs.msg.TransformStamped()
            try:
                T_IP = tf_buffer.lookup_transform(frame_id, 'pos', stamp - vicon_delay_s)
            except (tf2_ros.LookupException, tf2_ros.ConnectivityException, tf2_ros.ExtrapolationException):
                poll_rate.sleep()
                continue

            msg_cov = piksi_rtk_msgs.msg.PositionWithCovarianceStamped()
            msg_cov.header.stamp = stamp
            msg_cov.header.frame_id = 'att_ned'
            # Transform in NED frame
            east = T_IA.transform.translation.x - T_IP.transform.translation.x
            north = T_IA.transform.translation.y - T_IP.transform.translation.y
            up = T_IA.transform.translation.z - T_IP.transform.translation.z
            msg_cov.position.position = geometry_msgs.msg.Point(north, east, -up)
            # Values taken from rosbag
            msg_cov.position.covariance[0] =  0.000100
            msg_cov.position.covariance[1] =  0.0
            msg_cov.position.covariance[2] =  0.0
            msg_cov.position.covariance[3] =  0.0
            msg_cov.position.covariance[4] =  0.000100
            msg_cov.position.covariance[5] =  0.0
            msg_cov.position.covariance[6] =  0.0
            msg_cov.position.covariance[7] =  0.0
            msg_cov.position.covariance[8] =  0.000361
            pos_cov_pub.publish(msg_cov)

            # For visualization purpose
            msg = geometry_msgs.msg.PointStamped()
            msg.header.stamp = stamp
            msg.header.frame_id = frame_id
            msg.point = geometry_msgs.msg.Point(T_IA.transform.translation.x, T_IA.transform.translation.y, T_IA.transform.translation.z)
            pos_pub.publish(msg)

            stamp = stamp + rospy.Duration(0, 1e9 / rate)

        poll_rate.sleep()
